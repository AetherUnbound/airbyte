{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Zuora Spec",
    "type": "object",
    "required": ["start_date","client_id","client_secret"],
    "additionalProperties": false,
    "properties": {
      "start_date": {
        "type": "string",
        "description": "Start Date in format: YYYY-MM-DD",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
      },
      "window_in_days": {
        "type": "integer",
        "description": "The amount of days for each date-slice of data fetch. Bigger the value - faster the fetch.",
        "default": 90
      },
      "client_id": {
        "type": "string",
        "description": "Client id",
        "airbyte_secret": true
      },
      "client_secret": {
        "type": "string",
        "description": "Client Secret",
        "airbyte_secret": true
      },
      "is_sandbox": {
        "type": "boolean",
        "description": "Should we connect to sandbox env or not?",
        "default": true
      }
    }
  }
}
