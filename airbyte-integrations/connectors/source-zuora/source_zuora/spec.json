{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Zuora Spec",
    "type": "object",
    "required": ["start_date","client_id","client_secret"],
    "additionalProperties": false,
    "properties": {
      "start_date": {
        "type": "string",
        "description": "Start Date in format: YYYY-MM-DD hh:mm:ss"
      },
      "client_id": {
        "type": "string",
        "description": "Client id"
      },
      "client_secret": {
        "type": "string",
        "description": "Client Secret"
      },
      "is_sandbox": {
        "type": "boolean",
        "description": "Should we connect to sandbox env or not?",
        "default": true
      }
    }
  }
}
